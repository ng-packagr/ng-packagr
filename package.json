{
  "name": "ng-packagr",
  "version": "1.0.0-pre.0",
  "description": "Compile and package a TypeScript library to Angular Package Format",
  "author": "David Herges <david@spektrakel.de>",
  "license": "MIT",
  "repository": "https://github.com/dherges/ng-packagr.git",
  "homepage": "https://github.com/dherges/ng-packagr",
  "bugs": {
    "url": "https://github.com/dherges/ng-packagr/issues"
  },
  "bin": {
    "ng-packagr": "./cli/ng-packagr.js"
  },
  "dependencies": {
    "@angular/tsc-wrapped": "^4.1.2",
    "cpx": "^1.5.0",
    "gulp-inline-ng2-template": "^4.0.0",
    "minimist": "^1.2.0",
    "mz": "^2.6.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sorcery": "^0.10.0",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2",
    "uglify-js": "^3.0.7",
    "vinyl-fs": "^2.4.4"
  },
  "devDependencies": {
    "@angular/common": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@types/node": "^7.0.18",
    "json-schema-to-typescript": "^4.4.0",
    "rxjs": "^5.4.0",
    "standard-version": "^4.0.0",
    "zone.js": "^0.8.10"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && yarn schema",
    "build": "tsc -p tsconfig.packagr.json",
    "postbuild": "cpx '{ng-package.schema.json,cli/*,lib/conf/*.json}' dist",
    "schema": "json2ts --input ng-package.schema.json --output lib/conf/ng-package.conf.ts",
    "prerelease": "yarn build",
    "release": "standard-version --prerelease pre",
    "postrelease": "node prepublish.js",
    "publish:ci": "yarn prerelease && yarn postrelease",
    "sample": "node dist/cli/ng-packagr.js -p integration/sample/ng-package.json",
    "sample:dev": "node integration/sample/build.js",
    "sampleng": "node dist/cli/ng-packagr.js -p integration/sample_angular/ng-package.json",
    "sampleng:dev": "node integration/sample_angular/build.js",
    "test": "yarn build && yarn sample"
  }
}
