{
  "name": "ng-packagr",
  "version": "1.0.0-pre.3",
  "description": "Compile and package a TypeScript library to Angular Package Format",
  "keywords": [
    "angular",
    "angular2",
    "angular4",
    "angular-seed",
    "angular-library",
    "angular-starter-kit",
    "angular-components",
    "components",
    "component-library",
    "typescript",
    "css",
    "scss",
    "html"
  ],
  "author": "David Herges <david@spektrakel.de>",
  "license": "MIT",
  "repository": "https://github.com/dherges/ng-packagr.git",
  "homepage": "https://github.com/dherges/ng-packagr",
  "bugs": {
    "url": "https://github.com/dherges/ng-packagr/issues"
  },
  "bin": {
    "ng-packagr": "./cli/ng-packagr.js"
  },
  "dependencies": {
    "@angular/tsc-wrapped": "^4.1.2",
    "cpx": "^1.5.0",
    "glob": "^7.1.2",
    "gulp-inline-ng2-template": "^4.0.0",
    "minimist": "^1.2.0",
    "mz": "^2.6.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.42.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sorcery": "^0.10.0",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.2",
    "uglify-js": "^3.0.7",
    "vinyl-fs": "^2.4.4"
  },
  "devDependencies": {
    "@angular/common": "^4.1.3",
    "@angular/core": "^4.1.3",
    "@angular/http": "^4.1.3",
    "@angular/platform-browser": "^4.1.3",
    "@types/chai": "^4.0.0",
    "@types/jasmine": "^2.5.51",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/sinon": "^2.3.0",
    "chai": "^4.0.1",
    "copyfiles": "^1.2.0",
    "jasmine": "^2.6.0",
    "json-schema-to-typescript": "^4.4.0",
    "mocha": "^3.4.2",
    "rxjs": "^5.4.0",
    "sinon": "^2.3.2",
    "standard-version": "^4.0.0",
    "zone.js": "^0.8.10"
  },
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && yarn schema",
    "build": "tsc -p tsconfig.packagr.json",
    "postbuild": "node postbuild.js",
    "schema": "json2ts --input lib/ng-package.schema.json --output lib/ng-package.schema.ts",
    "prerelease": "yarn build",
    "release": "standard-version --prerelease pre",
    "postrelease": "node prepublish.js",
    "publish:ci": "yarn prerelease && yarn postrelease",
    "samples": "node dist/cli/ng-packagr.js -p integration/sample_core/ng-package.json && node dist/cli/ng-packagr.js -p integration/sample_custom/ng-package.json && node dist/cli/ng-packagr.js -p integration/sample_material/ng-package.json",
    "samples:dev": "node integration/build.js",
    "samples:test": "TS_NODE_PROJECT=integration/tsconfig.specs.json mocha --compilers ts:ts-node/register integration/sample_*/specs/**/*.ts",
    "test": "yarn build && yarn samples && yarn samples:test"
  }
}
