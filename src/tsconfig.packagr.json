{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "lib": ["es2015", "dom"],
    "outDir": "../dist",
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ]
  },
  "files": [
    "cli/main.ts",
    "public_api.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
