{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "lib": ["es2019"],
    "types": ["chai", "mocha", "node", "sinon"]
  },
  "exclude": ["dist", "integration"]
}
